@using StudentNameRazorPages.Helpers
@{
    var currentUser = SessionHelper.GetCurrentUser(Context.Session);
    var isLoggedIn = SessionHelper.IsLoggedIn(Context.Session);
    var isAdmin = SessionHelper.IsAdmin(Context.Session);
    var isStaff = SessionHelper.IsStaff(Context.Session);
    var isLecturer = SessionHelper.IsLecturer(Context.Session);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FU News Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/StudentNameRazorPages.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="fas fa-newspaper me-2"></i>FU News Management
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/News/Index">
                                    <i class="fas fa-newspaper me-1"></i>News
                                </a>
                            </li>

                            @if (isAdmin)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cog me-1"></i>Admin
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-page="/Admin/Accounts/Index">
                                            <i class="fas fa-users me-1"></i>Manage Accounts
                                        </a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Reports/Index">
                                            <i class="fas fa-chart-bar me-1"></i>Reports
                                        </a></li>
                                    </ul>
                                </li>
                            }

                            @if (isStaff)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-edit me-1"></i>Staff
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-page="/Staff/Categories/Index">
                                            <i class="fas fa-tags me-1"></i>Categories
                                        </a></li>
                                        <li><a class="dropdown-item" asp-page="/Staff/News/Index">
                                            <i class="fas fa-newspaper me-1"></i>My News
                                        </a></li>
                                        <li><a class="dropdown-item" asp-page="/Staff/Profile/Index">
                                            <i class="fas fa-user me-1"></i>Profile
                                        </a></li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/News/Public">
                                    <i class="fas fa-newspaper me-1"></i>Public News
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i>@currentUser?.AccountName
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-page="/Profile/Index">
                                        <i class="fas fa-user-edit me-1"></i>Profile
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Logout">
                                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                                    </a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FU News Management System - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>