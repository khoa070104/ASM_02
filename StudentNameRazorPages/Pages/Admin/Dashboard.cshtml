@page
@model StudentNameRazorPages.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Real-time Notification Area -->
<div id="realTimeNotifications" class="mb-3"></div>

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">
            <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
        </h1>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalAccounts</h4>
                        <p class="mb-0">Total Accounts</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalNews</h4>
                        <p class="mb-0">Total News</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-newspaper fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalCategories</h4>
                        <p class="mb-0">Total Categories</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-tags fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalTags</h4>
                        <p class="mb-0">Total Tags</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-tag fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-line me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/Admin/Accounts/Index" class="btn btn-outline-primary">
                        <i class="fas fa-users me-2"></i>Manage Accounts
                    </a>
                    <a href="/Admin/Reports/Index" class="btn btn-outline-success">
                        <i class="fas fa-chart-bar me-2"></i>View Reports
                    </a>
                    <a href="/News/Index" class="btn btn-outline-info">
                        <i class="fas fa-newspaper me-2"></i>View All News
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="fas fa-clock me-2"></i>Recent News</h5>
                <span class="badge bg-primary" id="newsCount">@Model.RecentNews.Count()</span>
            </div>
            <div class="card-body">
                <div id="recentNewsList">
                    @if (Model.RecentNews.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var news in Model.RecentNews.Take(5))
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-start news-item" data-news-id="@news.NewsArticleId">
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold">@news.NewsTitle</div>
                                        <small class="text-muted">@news.CreatedDate.ToString("MMM dd, yyyy HH:mm")</small>
                                    </div>
                                    <span class="badge bg-@(news.NewsStatus ? "success" : "secondary") rounded-pill">
                                        @(news.NewsStatus ? "Active" : "Inactive")
                                    </span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No news articles found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


